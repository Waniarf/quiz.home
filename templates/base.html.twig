<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css"/>
            <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        {% endblock %}
        {% block fonts %}
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
            <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
            <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">\
        <div class = "container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">

                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">
                            {% trans %}
                                menu.home
                            {% endtrans %}
                            <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="btn-group dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {% trans %}
                                menu.list
                            {% endtrans %}
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="/admin/question">
                                {% trans %}
                                    menu.questions
                                {% endtrans %}
                            </a>
                            <a class="dropdown-item" href="/admin/quiz">
                                {% trans %}
                                    menu.quizs
                                {% endtrans %}
                            </a>
                            <a class="dropdown-item" href="/admin/user">
                                {% trans %}
                                    menu.users
                                {% endtrans %}
                            </a>
                            <a class="dropdown-item" href="/admin/answer">
                                {% trans %}
                                    menu.answers
                                {% endtrans %}
                            </a>

                        </div>
                    </div>
                {% endif %}
                    <ul class="navbar-nav ">
                        <li class="nav-item active">
                                <a class="nav-link" href="/quiz/list">
                                    {% trans %}
                                        menu.quiz.list
                                    {% endtrans %}
                                    <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                <ul class="navbar-nav ">
                    <li class="nav-item active">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a class="nav-link" href="/logout">
                                {% trans %}
                                    menu.logout
                                {% endtrans %}
                                <span class="sr-only">(current)</span>
                            </a>
                        {% else %}
                            <a class="nav-link" href="/login">
                                {% trans %}
                                    menu.login
                                {% endtrans %}
                                <span class="sr-only">(current)</span>
                            </a>
                    </li>
                    <li class="nav-item active">
                            <a class="nav-link" href="/registration">
                                {% trans %}
                                    menu.registration
                                {% endtrans %}
                                <span class="sr-only">(current)</span>
                            </a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br>

    {% block modal %}
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label class="col-form-label">Вы уверены, что хотите удалить запись?</label>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"data-dismiss="modal">Close</button>
                        <button name="delete" type="button" class="btn btn-primary">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
