{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <h2>{{ question.Text }}</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <th>
                {% trans %}
                    question.variableAnswer
                {% endtrans %}
            </th>
            <th width = "15%">Is correct</th>
        </thead>
        <tbody>
        {% for option in question.questionOptions  %}
            <tr>
                <td>{{ option.text }}   </td>
                <td>{% if (option.IsValid==false) %}
                        {% trans %}
                            answer.isValidFalse
                        {% endtrans %}
                    {% else %}
                        {% trans %}
                            answer.isValidTrue
                        {% endtrans %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style = "margin :10px; margin-left: 0;">
        <a href = "/admin/question">
            <button class="btn btn-dark" align = "right">
                {% trans %}
                    question.goBackToAllQuestion
                {% endtrans %}
            </button>
        </a>
    </div>
    </script>
{% endblock %}
