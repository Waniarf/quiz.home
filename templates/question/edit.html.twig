{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}!{% endblock %}

{% block body %}

    <div style = "margin :10px; margin-left: 0;">
        <a href = "/admin/question">
            <button class="btn btn-dark" align = "right">
                {% trans %}
                    question.goBackToAllQuestion
                {% endtrans %}
            </button>
        </a>
    </div>

    {{ form_start(form, {  'name':'CustomValid','method': 'POST'}) }}
    {{ form_errors(form) }}
    {{ form_row(form.Text, { 'label' : 'question.text' }) }}
    <br>
        {% for option in form.questionOptions %}
            {% trans %}
                question.answer
            {% endtrans %}
            {{ form_widget(option.IsValid, { 'required' : false }) }}
            {{ form_widget(option.Text, { 'placeholder' : 'question.input' }) }}
            <br>
        {% endfor %}
    {{ form_widget(form.save, {attr: {class: 'btn'}}) }}
    {{ form_end(form) }}

    <script>

        $('[type=radio]').click(function() {
           clearForm();
            $(this).prop('checked', true);
        });

        function clearForm(){
            $('[type=radio]').each(function(){
                $(this).prop('checked', false);
            });
        }

    </script>

{% endblock %}
