{% extends "base.html.twig" %}
{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <h2 class="text-center">To register you need to <a href={{ url('logout') }}>logout</a></h2>
    {% else %}
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_errors(form.username) }}
            <div class="col-sm-12">
                {{ form_label(form.username ) }}
                {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
            </div>

        </div>
        <div class="form-group">
            {{ form_errors(form.email) }}
            <div class="col-sm-12">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_errors(form.plainPassword.first) }}
            <div class="col-sm-12">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">

            {{ form_errors(form.plainPassword.second) }}
            <div class="col-sm-12">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">

            {{ form_errors(form.name) }}
            <div class="col-sm-12">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">

            {{ form_errors(form.surname) }}
            <div class="col-sm-12">
                {{ form_label(form.surname) }}
                {{ form_widget(form.surname, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">

            {{ form_errors(form.lastname) }}
            <div class="col-sm-12">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <br>
                <button type="submit" class="btn btn-default">{% trans %}register{% endtrans %}</button> {% trans %}or{% endtrans %}
                <a class="btn btn-default" href={{ url('login') }}>{% trans %}login{% endtrans %}</a>
            </div>
        </div>
        {{ form_end(form) }}

    {% endif %}
{% endblock %}